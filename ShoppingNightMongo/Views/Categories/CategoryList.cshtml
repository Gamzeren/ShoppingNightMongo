@model List<ShoppingNightMongo.Dtos.CategoryDtos.ResultCategoryDto>

@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<h4 class="page-title">Kategori İşlemleri</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Kategori Listesi</div>
            </div>
            <div class="card-body">
                <div class="card-sub">
                    Aşağıda kategori listesini görüntüleyebilir ve işlemlerinizi gerçekleştirebilirsiniz.
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Kategori</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <th>@item.CategoryName</th>
                                <th><a href="/Categories/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></th>
                                <th><a href="/Categories/UpdateCategory/@item.CategoryId" class="btn btn-success">Güncelle</a></th>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Categories/CreateCategory/" class="btn btn-info">Yeni Kategori Ekle</a>
            </div>
        </div>
    </div>
</div>
