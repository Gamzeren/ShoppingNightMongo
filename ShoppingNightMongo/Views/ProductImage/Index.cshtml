@model List<ShoppingNightMongo.Dtos.ProductImageDtos.ResultProductImageDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<h4 class="page-title">Ürün Resim İşlemleri</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Kategori Listesi</div>
            </div>
            <div class="card-body">
                <div class="card-sub">
                    Aşağıda ürün resim listesini görüntüleyebilir ve işlemlerinizi gerçekleştirebilirsiniz.
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ürün</th>
                            <th scope="col">Resim Url</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <th>@item.ProductName</th>
                                <th>@item.ImageUrl</th>
                                <th><a href="/ProductImage/DeleteProductImage/@item.ProductImageId" class="btn btn-danger">Sil</a></th>
                                <th><a href="/ProductImage/UpdateProductImage/@item.ProductImageId" class="btn btn-success">Güncelle</a></th>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/ProductImage/CreateProductImage/" class="btn btn-info">Yeni Ürün Resmi Ekle</a>
            </div>
        </div>
    </div>
</div>