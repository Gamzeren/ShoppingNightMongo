@model List<ShoppingNightMongo.Dtos.ProductDtos.ResultProductDto>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<h4 class="page-title">Ürün İşlemleri</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Ürün Listesi</div>
            </div>
            <div class="card-body">
                <div class="card-sub">
                    Aşağıda ürün listesini görüntüleyebilir ve işlemlerinizi gerçekleştirebilirsiniz.
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ürün</th>
                            <th scope="col">Kategori</th>
                            <th scope="col">Cinsiyet</th>
                            <th scope="col">Fiyat</th>
                            <th scope="col">Stok Sayısı</th>
                            <th scope="col">Durum</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <th>@item.ProductName</th>
                                <th>@item.CategoryName</th>
                                <th>@item.Gender</th>
                                <th>@item.ProductPrice</th>
                                <th>@item.StockCount</th>
                                @if(item.Status)
                                {
                                    <td><span class="badge badge-success">Aktif</span></td>
                                }
                                else
                                {
                                    <td><span class="badge badge-danger">Pasif</span></td>
                                }
                                <th><a href="/Products/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></th>
                                <th><a href="/Products/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a></th>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Products/CreateProduct/" class="btn btn-info">Yeni Ürün Ekle</a>
            </div>
        </div>
    </div>
</div>